{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "components/Navbar/MobileNavbar.tsx",
    "components/Navbar/handheld/DropdownItem.tsx",
    "components/Hero/handheld/MobileTeam.tsx",
    "components/LoadingScreen.js",
    "components/Navbar/handheld/MobileNavbar.tsx"
  ],
  "exclude": ["node_modules"]
}
